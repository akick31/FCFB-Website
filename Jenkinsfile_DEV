pipeline {
    agent any

    environment {
        IMAGE_NAME = 'fcfb-website-dev'
        CONTAINER_NAME = 'FCFB-Website-DEV'
        DOCKERFILE = 'Dockerfile_DEV'
        CLIENT_ID = credentials('CLIENT_ID_CREDENTIALS_ID')
        CLIENT_SECRET = credentials('CLIENT_SECRET_CREDENTIALS_ID')
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the FCFB Website repository...'
                checkout scm
            }
        }

        stage('Generate .env File') {
            steps {
                script {
                    echo 'Generating .env file...'
                    sh """
                        cat <<EOF > .env
                        CLIENT_ID=${DISCORD_CLIENT_ID}
                        CLIENT_SECRET=${DISCORD_CLIENT_SECRET}
                        BASE_URL=https://dev.fakecollegefootball.com
                        REACT_APP_API_BASE_URL=https://dev.api.fakecollegefootball.com/arceus
                        EOF
                    """
                }
            }
        }

        stage('Stop and Remove Existing Container') {
            steps {
                script {
                    echo 'Stopping and removing the existing container...'
                    sh """
                        docker stop ${CONTAINER_NAME} || echo "No running container found."
                        docker rm ${CONTAINER_NAME} || echo "No container to remove."
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image for FCFB Website...'
                sh """
                    docker build --no-cache -f ${DOCKERFILE} -t ${IMAGE_NAME}:latest .
                """
            }
        }

        stage('Run New Container') {
            steps {
                script {
                    echo 'Running the new container...'
                    sh """
                        docker run -d --name ${CONTAINER_NAME} \
                            -v /var/images:/app/images \
                            -p 462:462 \
                            --env-file .env \
                            ${IMAGE_NAME}:latest
                    """
                }
            }
        }

        stage('Cleanup') {
            steps {
                script {
                    echo 'Cleaning up sensitive files...'
                    sh 'rm -f .env'
                }
            }
        }

        stage('Cleanup Docker System') {
            steps {
                script {
                    echo 'Pruning unused Docker resources...'
                    sh 'docker system prune -f'
                }
            }
        }
    }

    post {
        success {
            echo 'FCFB Website deployed successfully!'
        }
        failure {
            echo 'FCFB Website deployment failed.'
        }
    }
}